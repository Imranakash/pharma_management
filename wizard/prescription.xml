<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Wizard Form View -->
    <record id="view_pharma_wizard_prescription_form" model="ir.ui.view">
        <field name="name">pharma.wizard.prescription.form</field>
        <field name="model">pharma.wizard.prescription</field>
        <field name="arch" type="xml">
            <form string="Prescription Creation Assistant">
                <group>
                    <field name="representative_id"/>
                    <field name="doctor_ids" widget="many2many_tags"/>
                    <field name="prescription_date"/>
                    <field name="medicine_id"/>
                    <field name="quantity"/>
                </group>
                <footer>
                    <button name="action_generate_prescriptions"
                            string="Generate Prescriptions"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_pharma_wizard_prescription" model="ir.actions.act_window">
        <field name="name">Prescription Creation Assistant</field>
        <field name="res_model">pharma.wizard.prescription</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>



</odoo>
