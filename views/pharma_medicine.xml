<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- list View -->
    <record id="view_pharma_medicine_list" model="ir.ui.view">
        <field name="name">pharma.medicine.list</field>
        <field name="model">pharma.medicine</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="category"/>
                <field name="price"/>
                <field name="stock_qty"/>
                <field name="is_low_stock"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_pharma_medicine_form" model="ir.ui.view">
        <field name="name">pharma.medicine.form</field>
        <field name="model">pharma.medicine</field>
        <field name="arch" type="xml">
            <form string="Medicine">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="category"/>
                    </group>
                    <group>
                        <field name="price"/>
                        <field name="stock_qty"/>
                        <field name="is_low_stock" modifiers="{'readonly': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_pharma_medicine" model="ir.actions.act_window">
        <field name="name">Medicines</field>
        <field name="res_model">pharma.medicine</field>
        <field name="view_mode">list,form</field>
    </record>


</odoo>
