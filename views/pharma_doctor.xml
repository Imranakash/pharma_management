<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_pharma_doctor_form" model="ir.ui.view">
        <field name="name">pharma.doctor.form</field>
        <field name="model">pharma.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor">
                <header>
                    <!-- Smart Button -->
                    <button name="action_open_prescriptions"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-file-medical">
                        <field name="prescription_count" widget="statinfo" string="Prescriptions"/>
                    </button>
                    <!-- Print Button -->
                    <button name="print_doctor_report"
                            string="Print Doctor Report"
                            type="object"
                            class="btn-primary"
                            icon="fa-print"/>
                </header>

                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="specialization"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="city"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pharma_doctor_list" model="ir.ui.view">
        <field name="name">pharma.doctor.list</field>
        <field name="model">pharma.doctor</field>
        <field name="arch" type="xml">
            <list string="Doctors">
                <field name="name"/>
                <field name="specialization"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="city"/>
                <field name="prescription_count"/>
            </list>
        </field>
    </record>
<!--    Search View-->

    <record id="view_pharma_doctor_search" model="ir.ui.view">
    <field name="name">pharma.doctor.search</field>
    <field name="model">pharma.doctor</field>
    <field name="arch" type="xml">
        <search string="Search Doctors">
            <field name="name"/>
            <field name="city"/>
            <field name="specialization"/>

            <filter string="By City" name="filter_by_city" domain="[]" context="{'group_by':'city'}"/>
            <filter string="By Specialization" name="filter_by_specialization" domain="[]" context="{'group_by':'specialization'}"/>
        </search>
    </field>
</record>


    <record id="action_pharma_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">pharma.doctor</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
