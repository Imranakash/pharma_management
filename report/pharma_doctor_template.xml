<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- QWeb Template -->
        <template id="report_pharma_doctor_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2 style="text-align:center;">Doctor Report</h2>
                            <p><strong>Name:</strong> <t t-esc="doc.name"/></p>
                            <p><strong>Specialization:</strong> <t t-esc="doc.specialization"/></p>
                            <p><strong>Phone:</strong> <t t-esc="doc.phone"/></p>
                            <p><strong>Email:</strong> <t t-esc="doc.email"/></p>
                            <p><strong>City:</strong> <t t-esc="doc.city"/></p>
                            <p><strong>Prescription Count:</strong> <t t-esc="doc.prescription_count"/></p>
                        </div>
                    </t>
                </t>
            </t>
        </template>
</odoo>
